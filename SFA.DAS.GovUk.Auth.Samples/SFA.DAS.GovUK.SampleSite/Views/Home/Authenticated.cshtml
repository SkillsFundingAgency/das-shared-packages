@using System.Security.Claims
@{
    Layout = "_Layout";
}

<h1 class="govuk-heading-xl">POC Auth - You've signed in</h1>

<p>Name: @Context.User.Claims.FirstOrDefault(c=>c.Type.Equals(ClaimTypes.Name))?.Value</p>
<p>Email: @Context.User.Claims.FirstOrDefault(c=>c.Type.Equals(ClaimTypes.Email))?.Value</p>
<p>Sub: @Context.User.Claims.FirstOrDefault(c=>c.Type.Equals(ClaimTypes.NameIdentifier))?.Value</p>
<p>CustomClaim AccountId: @Context.User.Claims.FirstOrDefault(c=>c.Type.Equals("EmployerAccountId"))?.Value</p>
<a asp-action="AccountDetails" asp-Controller="Home" class="govuk-link">Get Details</a>
<a asp-action="Explanation" asp-controller="Home" class="govuk-button">Explanation</a>
<a asp-action="SigningOut" asp-controller="Home" class="govuk-button">Sign Out</a>