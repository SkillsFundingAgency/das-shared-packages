@using System.Security.Claims
@{
    Layout = "_LayoutProvider";
}


<h1 class="govuk-heading-xl">DfE Sign-in - You've signed in</h1>

<table summary="Claims details" class="govuk-table">
    <tbody>
        <tr>
            <th scope="col" align="left" class="govuk-table__caption govuk-table__caption--m">Claims</th>
        </tr>
        <tr>
            <th scope="col" class="govuk-table__header">Name</th>
            <th scope="col" class="govuk-table__header">Value</th>
        </tr>
        @foreach (var claim in Context.User.Claims.ToList())
        {
            <tr scope="row" class="govuk-table__row">
                <td class="govuk-table__cell">@claim.Type</td>
                <td class="govuk-table__cell">@claim.Value</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="SigningOut" asp-controller="Home" class="govuk-button">Sign Out</a>